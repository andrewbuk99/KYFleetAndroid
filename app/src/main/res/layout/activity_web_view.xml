<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_web_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="@color/WebViewBack"
    tools:context="com.mustardtec.yourfleet.webViewActivity"
    android:theme="@style/Theme.AppCompat.NoActionBar">

    <RelativeLayout
        android:id="@+id/rl_relativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="1dp"
        android:layout_marginBottom="3dp"
        android:background="@color/WebViewBack"
        android:layout_alignParentTop="true" >

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dp"
            android:background="@null"
            android:onClick="closeView"
            android:src="@drawable/cancel" />
        <Button
            android:id="@+id/SaveForLater"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:minHeight="0dp"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:background="@drawable/my_button_bg"
            android:textAllCaps="false"
            android:onClick="saveAction"
            android:text="Save for later" />

        <ImageButton
            android:id="@+id/webviewLogo"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:background="@null"
            android:src="@drawable/logodesktopv5" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="0dip"
        android:layout_below="@+id/rl_relativeLayout2"
        >
    <WebView
        android:id="@+id/externalWebView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
 />
    </RelativeLayout>
</RelativeLayout>
